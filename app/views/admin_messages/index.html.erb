<h1 align="center">運営からのメッセージ</h1>
<% @admin_messages.order(created_at: :desc).each do |admin_message| %>
    <div class="border" style="margin:2%; padding:3%;">
        <div class="field mb-3">
        <p> <%= admin_message.created_at %></p>
        </div>

        <div class="field mb-3">
        <p><%= admin_message.content %></p>
        </div>

    </div>
<% end %>
<%= will_paginate @admin_messages,
                 previous_label: '前へ',
                 next_label: '次へ' %>
