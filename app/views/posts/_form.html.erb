<div class="border" style="margin:20%; margin-top:5%; padding:3%;">
  <h1>トピック作成</h1>
  <%= form_with(model: [@community, @post]) do |form| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "エラー") %>があります。 </h2>

        <ul>
        <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field mb-3">
      <%= form.label :タイトル, class:"form-label" %>
      <%= form.text_field :title, class:"form-control", placeholder: "タイトルを入力してください" %>
    </div>

    <div class="field mb-3">
      <%= form.label :説明, class:"form-label" %>
      <%= form.text_area :body, rows: 6, class:"form-control", placeholder: "説明を入力してください" %>
    </div>

    <div class="field mb-3">
      <%= form.label :画像, class:"form-label" %>
      <%= form.file_field :image, class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "保存", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
