<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-lg-3">
      <%= render "shared/sidebar" %>
    </div>
    <div class="col-12 col-lg-9 events">
      <h4 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> Myコミュニティ一覧</h4>
      <div class="mt-4 mb-4">
        <div class="py-4 fw-bold bg-light-yellow w-100 text-center rounded">
          登録済み ペット飼育数:<span>2</span>
        </div>
      </div>
      <div>
        <div class="pb-4 border-bottom-dotted mb-5">
          <h4 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> タロウ ペットプロフィール</h4>
          <div class="mt-3">
            <div class="d-flex justify-content-between align-items-center gap-3 flex-md-row mb-2">
              <div class="d-block rounded flex-fill" style="aspect-ratio: 1/1">
                <img src="images/1.png" class="w-100"/>
              </div>
              <div class="d-block rounded flex-fill" style="aspect-ratio: 1/1">
                <img src="images/1.png" class="w-100"/>
              </div>
              <div class="d-block rounded flex-fill" style="aspect-ratio: 1/1">
                <img src="images/1.png" class="w-100"/>
              </div>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center gap-2 pb-4">
              <h4 class="fw-bold">タロウ (ペットのお名前)</h4>
              <div class="d-flex flex-column justify-content-center align-items-center gap-2">
                <h4 class="fw-bold">トイプードル</h4>
                <div class="d-flex align-items-center gap-3">
                  <i class="fa fa-key"></i> <span>推定 0歳6ヶ月 東京都</span>
                </div>
                <button class="btn btn-lg bg-main text-white fw-bold px-5 mt-3">編集する</button>
              </div>
            </div>
          </div>
        </div>
        <div class="pb-4 border-bottom-dotted mb-5">
          <h4 class="d-flex align-items-center gap-2 fw-bold"><i class="fa fa-paw text-main"></i> ココロ ペットプロフィール</h4>
          <div class="mt-3">
            <div class="d-flex justify-content-between align-items-center gap-3 flex-md-row mb-2">
              <div class="d-block rounded flex-fill" style="aspect-ratio: 1/1">
                <img src="images/1.png" class="w-100"/>
              </div>
              <div class="d-block rounded flex-fill" style="aspect-ratio: 1/1">
                <img src="images/1.png" class="w-100"/>
              </div>
              <div class="d-block rounded flex-fill" style="aspect-ratio: 1/1">
                <img src="images/1.png" class="w-100"/>
              </div>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center gap-2 pb-4">
              <h4 class="fw-bold">ココロ</h4>
              <div class="d-flex flex-column justify-content-center align-items-center gap-2">
                <h4 class="fw-bold">ヨークシャーテリア</h4>
                <div class="d-flex align-items-center gap-3">
                  <i class="fa fa-key"></i> <span>推定 0歳6ヶ月 東京都</span>
                </div>
                <button class="btn btn-lg bg-light-cyan text-white fw-bold px-5 d-flex justify-content-center align-items-center gap-2 mt-3">
                  <i class="fa fa-paw"></i> ペットを追加する
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-none">
  <h1 align="center">
    Myペット
    <%= link_to "ペットを追加する", new_pet_path, class:"btn btn-primary"  %>
  </h1>
  <div class="container">
    <div class="row">
      <% @pets.each do |pet| %>
        <div class="card mb-3">
          <div class="row no-gutters">
            <% if pet.image.attached? %>
              <div class="col-md-4">
                <img src="<%= url_for(pet.image) %>" class="card-img" height="250">
              </div>
            <% end %>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= pet.name %></h5>
                <p class="card-text">年齢: <%= pet.age %></p>
                <p class="card-text">性別: <%= pet.gender %></p>
                <%= link_to 'プロフィールを見る', pet, class:"btn btn-primary" %>
                <% if pet.profile_display %>
                  <span class="badge custom-badge ">プロフィールに表示中</span>
                <% else %>
                  <%= link_to 'プロフィールに表示する', set_profile_display_pet_path(pet), method: :post, class: "btn btn-secondary" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
